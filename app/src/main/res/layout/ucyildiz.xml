<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/kazandinucyildiz"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/ucnextlevel"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bennext"
        />

    <Button
        android:id="@+id/ucagain"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btntekraroyna"
        />

    <Button
        android:id="@+id/ucbtnhome"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/kaybettincikis"
        />


</LinearLayout>