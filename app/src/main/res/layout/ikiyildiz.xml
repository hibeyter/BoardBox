<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/kazandinikiyildiz"
    android:gravity="center"
    >

    <Button
        android:id="@+id/ikinextlevel"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bennext" />

    <Button
        android:id="@+id/ikiagain"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_below="@+id/ikinextlevel"
        android:layout_marginTop="10dp"
        android:background="@drawable/btntekraroyna" />

    <Button
        android:id="@+id/ikibtnhome"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_below="@+id/ikiagain"
        android:layout_marginTop="10dp"
        android:background="@drawable/kaybettincikis" />

</RelativeLayout>